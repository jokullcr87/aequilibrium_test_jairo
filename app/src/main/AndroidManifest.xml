<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jrodriguezh.transformers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TransformersApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Transformers">
        <activity
            android:name=".ui.landing.LandingView"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_landing_view"
            android:theme="@style/Theme.Transformers.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainView"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>